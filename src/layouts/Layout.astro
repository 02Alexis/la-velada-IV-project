---
import "@fontsource-variable/jost";
import LightsBackground from "@/components/LightsBackground.astro"
import Noise from "@/components/Noise.astro";
import ButtonUp from "@/components/ButtonUp.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Velada del AÃ±o, Evento de boxeo entre Streamers y creadores de contenido"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href="https://lavelada.es" />
    <title>{title}</title>
  </head>
  <body
    class="overflow-x-hidden selection:bg-accent [&_:focus-visible]:outline-none [&_:focus-visible]:ring-2 [&_:focus-visible]:ring-primary"
  >
    <Noise />
    <LightsBackground />
    <div
      class="mx-auto max-w-6xl px-2 pt-16 selection:bg-primary selection:text-secondary md:pt-20 lg:px-10"
      id="main-content"
    >
      <slot />
    </div>
    <ButtonUp />
  </body>
</html>
<style is:global>
  :root {
    --color-primary: #ddd;
    --color-secondary: #333;

    --background-color: #141800;
    --color-accent: #d5ff00;
    --background-twitch: var(--color-twitch-ice);

    --color-twitch: #9146ff;
    --color-twitch-ice: #f0f0ff;
  }

  html {
    font-family: "Jost Variable", system-ui, sans-serif;
    background: var(--background-color);
    overflow-x: hidden;
    overscroll-behavior: none;
  }

  main {
    position: relative;
  }

  @media screen and (prefers-reduced-motion: no-preference) {
    html {
      scroll-behavior: smooth;
    }
  }

  /* estilos al scroll */
  ::-webkit-scrollbar {
    width: 10px;
    border-radius: 10px;
  }

  ::-webkit-scrollbar-thumb {
    border-radius: 10px;
    background-color: theme("colors.accent");
    border: 2px solid transparent;
    background-clip: content-box;
  }

  ::-webkit-scrollbar-track {
    background: var(--background-image);
  }

  ::-webkit-scrollbar-corner {
    background: var(--background-image);
  }
</style>
